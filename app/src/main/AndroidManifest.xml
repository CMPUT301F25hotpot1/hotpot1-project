<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Network + Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <!-- Camera permission for QR code scanning -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Declare that the app can use (but does not require) a camera -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lottary"
        tools:targetApi="31">

        <!--
            EventDetailsActivity
            - Shows details for a single event.
            - Now also handles deep links of the form: lottary://event/<eventId>
              so external QR apps / browsers can open this screen directly.
        -->
        <activity
            android:name="com.example.lottary.ui.browse.EventDetailsActivity"
            android:exported="true">

            <!-- Deep link: lottary://event/<id> -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- URI example: lottary://event/abc123 -->
                <data
                    android:scheme="lottary"
                    android:host="event" />
            </intent-filter>
        </activity>

        <!--
            QrScanActivity
            - "Generate Event QR Code": lets the user pick an event and shows
              a QR code whose text is lottary://event/<eventId>.
            - Internal only, no external intent-filters required.
        -->
        <activity
            android:name="com.example.lottary.ui.browse.QrScanActivity"
            android:exported="false" />

        <!--
            EventQrScannerActivity
            - In-app camera scanner that reads the QR code and opens
              EventDetailsActivity.
        -->
        <activity
            android:name="com.example.lottary.ui.browse.EventQrScannerActivity"
            android:exported="false" />

        <activity android:name="com.example.lottary.ui.notifications.NotificationsActivity" />
        <activity android:name="com.example.lottary.ui.browse.BrowseActivity" />
        <activity android:name="com.example.lottary.ui.profile.MyProfileActivity" />
        <activity android:name="com.example.lottary.ui.profile.CreateProfileActivity" />
        <activity android:name="com.example.lottary.ui.profile.EditProfileActivity" />

        <!--
            MyEventsActivity
            - Launch activity for the app (bottom-nav "My Events" tab).
        -->
        <activity
            android:name="com.example.lottary.ui.events.MyEventsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.lottary.MainActivity" />
        <activity android:name="com.example.lottary.ui.events.create.CreateEventActivity" />
        <activity android:name="com.example.lottary.ui.events.edit.EditEventActivity" />

        <activity android:name="com.example.lottary.ui.events.manage.ManageEventActivity" />
        <activity android:name="com.example.lottary.ui.events.manage.SendNotificationsActivity" />
        <activity android:name="com.example.lottary.ui.events.manage.QrCodeActivity" />

        <!--
            MapActivity
            - Map activity that utilizes Google Maps API (with key)
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="current_key"/>
        <activity
            android:name=".ui.events.manage.MapActivity"
            android:exported="true">
        </activity>


        <!-- Admin section -->
        <activity android:name="com.example.lottary.ui.admin.AdminDashboardActivity" />
        <activity android:name="com.example.lottary.ui.admin.AdminEventsActivity" />
        <activity android:name="com.example.lottary.ui.admin.AdminUsersActivity" />
        <activity android:name="com.example.lottary.ui.admin.AdminNotificationsActivity" />
        <activity android:name="com.example.lottary.ui.admin.AdminProfileActivity" />

        <activity
            android:name="com.example.lottary.ui.admin.AdminImagesActivity"
            android:exported="false"
            android:label="Images" />

        <activity
            android:name="com.example.lottary.ui.admin.ImageViewerActivity"
            android:exported="false"
            android:label="Image" />

        <activity
            android:name="com.example.lottary.ui.admin.ImageDetailActivity"
            android:exported="false"
            android:label="Image"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.example.lottary.ui.admin.NotificationLogsActivity"
            android:exported="false"
            android:label="Logs" />

        <!-- ✅ 新加的：Admin 查看某个用户的 Notification 日志页面 -->
        <activity
            android:name="com.example.lottary.ui.admin.UserNotificationLogsActivity"
            android:exported="false"
            android:label="User Notifications" />

        <!-- FileProvider，用于图片共享等 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
