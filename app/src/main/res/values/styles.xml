<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="ScreenTitle.Admin">
        <item name="android:textColor">@color/admin_black</item>
    </style>
    <style name="ScreenTitle.Entrant">
        <item name="android:textColor">@color/entrant_teal</item>
    </style>
    <style name="ScreenTitle.Organizer">
        <item name="android:textColor">@color/organizer_purple</item>
    </style>

    <style name="ItemTitle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LotteryButtonText" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="textAllCaps">false</item>


    </style>
    <style name="LotteryButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/LotteryButtonText</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    <style name="LotteryButton.Admin">
        <item name="android:backgroundTint">@color/admin_black</item>
    </style>
    <style name="LotteryButton.Entrant">
        <item name="android:backgroundTint">@color/entrant_teal</item>
    </style>
    <style name="LotteryButton.Organizer">
        <item name="android:backgroundTint">@color/organizer_purple</item>
    </style>
    <style name="LotteryButton.Neutral">
        <item name="android:textColor">@color/admin_black</item>
        <item name="android:backgroundTint">@color/button_neutral</item>
        <item name="strokeColor">@color/admin_black</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>