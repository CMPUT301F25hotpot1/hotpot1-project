<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/dialog_draw_winners"
    app:strokeColor="#D9D9D9"
    app:strokeWidth="1dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/draw_winners"
        style="@style/DialogTitle.Organizer" />

    <RadioGroup
        android:id="@+id/grp_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RadioButton
            android:id="@+id/rb_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/organizer_purple"
            android:text="Fill capacity (draw to fill remaining)" />

        <RadioButton
            android:id="@+id/rb_specify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/organizer_purple"
            android:text="Specify amount" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_amount"
        android:hint="Amount of winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_draw_winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/draw_winners"
        style="@style/LotteryButton.Organizer"/>

</LinearLayout>
