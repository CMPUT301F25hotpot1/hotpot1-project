<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Title & Status -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/event_title"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_status"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textStyle="bold"
            android:textColor="@color/open_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Time, City, Venue -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mar 5, 2023 1:30PM"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edmonton, AB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Event Thumbnail -->
        <ImageView
            android:id="@+id/img"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#EDEDED"
            android:contentDescription="@string/event_poster"
            android:src="@drawable/ic_event"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_status"/>

        <!-- Row for Buttons -->
        <LinearLayout
            android:id="@+id/btn_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Entrants - Sign Up & Decline -->
            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                style="@style/LotteryButton.SignUp"
                android:visibility="gone" />
            <Button
                android:id="@+id/btn_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decline"
                android:layout_marginStart="8dp"
                style="@style/LotteryButton.Neutral"
                android:visibility="gone" />

            <!-- Entrants - Leave Waiting List -->
            <Button
                android:id="@+id/btn_leave_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leave_waiting_list"
                style="@style/LotteryButton.Neutral"
                android:visibility="gone"/>

            <!-- Entrants - Join Waiting List -->
            <Button
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_waiting_list"
                style="@style/LotteryButton.Entrant"
                android:visibility="gone"/>

            <!-- Organizer - Edit Info & Manage -->
            <Button
                android:id="@+id/btn_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage"
                style="@style/LotteryButton.Organizer" />
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Edit Info"
                style="@style/LotteryButton.Neutral" />

            <!-- Admin - View Image & Remove Event -->
            <Button
                android:id="@+id/btn_view_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Image"
                style="@style/LotteryButton.Admin"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_event_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Remove"
                style="@style/LotteryButton.Neutral"
                android:visibility="gone"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
