<?xml version="1.0" encoding="utf-8"?>
<!-- Row for an entrant with a small icon, name, and status. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Placeholder bell/avatar -->
    <ImageView
        android:id="@+id/img_bell"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@drawable/ic_person_24"
        android:background="@drawable/bg_circle_soft"
        app:tint="@color/organizer_purple" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_name"
            android:text="Jane Doe"
            style="@style/ItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_status"
            android:text="Chosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_view_logs"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_notifications_24"
        android:background="@drawable/bg_circle_button"
        app:tint="@color/admin_black"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:padding="8dp"
        android:src="@drawable/ic_person_remove_24"
        android:background="@drawable/bg_circle_button"
        app:tint="@color/admin_black"
        android:visibility="gone"/>
</LinearLayout>
