<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部关闭按钮 -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:tint="@android:color/black"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- 海报占位 -->
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/event_image"
            android:layout_marginBottom="16dp"/>

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Community Swim Class" />

        <!-- 场馆 -->
        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Van Vliet Complex"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- 城市 + 日期时间 -->
        <TextView
            android:id="@+id/tvCityDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edmonton, AB, Mar 5, 2023 1:30 PM"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>

        <!-- 描述 -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:overScrollMode="always"
            android:text="Event description goes here..."
            android:scrollbars="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- 状态 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textStyle="bold"
            android:textColor="@color/brand_green"
            android:layout_marginBottom="8dp"/>

        <!-- 容量与等待人数 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60 slots"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:id="@+id/tvWaitlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 on waiting list"
                android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>

        <!-- Join 按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/join_waiting_list"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn_green_rounded"/>

    </LinearLayout>
</ScrollView>

