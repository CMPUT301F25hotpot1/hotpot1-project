<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingHorizontal="36dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            app:tint="@color/admin_black"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="15dp"
            android:scaleType="fitCenter"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/event_image" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Community Swim Class" />

        <TextView
            android:id="@+id/tv_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Van Vliet Complex"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvCityDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edmonton, AB, Mar 5, 2023 1:30 PM"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:overScrollMode="always"
            android:text="Event description goes here..."
            android:scrollbars="vertical"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Open"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/brand_green"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60 slots"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:id="@+id/tvWaitlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 on waiting list"
                android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/join_waiting_list"
            style="@style/LotteryButton.Entrant"/>

    </LinearLayout>
</ScrollView>

