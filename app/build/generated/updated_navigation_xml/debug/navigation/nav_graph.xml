<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/homeFragment" >
<fragment
    android:id="@+id/homeFragment"
    android:name="com.example.lottery.ui.fragment.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" >

    <action
        android:id="@+id/action_homeFragment_to_eventDetailFragment"
        app:destination="@id/eventDetailFragment" />
    <action
        android:id="@+id/action_homeFragment_to_qrScannerFragment"
        app:destination="@id/qrScannerFragment" />

</fragment>
<fragment
    android:id="@+id/eventDetailFragment"
    android:name="com.example.lottery.ui.fragment.EventDetailFragment"
    android:label="Event Detail"
    tools:layout="@layout/fragment_event_detail" />
<fragment
    android:id="@+id/qrScannerFragment"
    android:name="com.example.lottery.ui.fragment.QRFragment"
    android:label="QR Scanner"
    tools:layout="@layout/fragment_qr" />
</navigation>